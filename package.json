{
  "name": "vessel-root",
  "private": true,
  "repository": "project44/vessel",
  "contributors": [
    "Brandon Clark"
  ],
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:packages": "packemon build --addEngines",
    "build:types": "tsc --build",
    "bump": "lerna version",
    "clean": "run-s clean:*",
    "clean:build": "packemon clean",
    "clean:types": "rimraf 'packages/*/{dts,*.tsbuildinfo}'",
    "format": "run-s format:*",
    "format:eslint": "eslint --fix packages/*/src/**/*.ts",
    "format:prettier": "prettier --write .",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --cache packages/*/src/**/*.ts",
    "lint:types": "tsc --noEmit --emitDeclarationOnly false",
    "pack": "NODE_ENV=production yarn run packemon pack --addEngines --addFiles --declaration=standard",
    "prepare": "husky install && yarn run build",
    "release": "run-s release:*",
    "release:preclean": "yarn clean",
    "release:build": "NODE_ENV=production yarn run packemon pack --addEngines --addFiles --declaration=standard"
  },
  "devDependencies": {
    "@babel/core": "^7.17.4",
    "@beemo/core": "^2.1.3",
    "@beemo/driver-babel": "^2.0.5",
    "@beemo/driver-eslint": "^2.0.4",
    "@beemo/driver-jest": "^2.0.4",
    "@beemo/driver-prettier": "^2.0.5",
    "@beemo/driver-typescript": "^2.1.1",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/config-lerna-scopes": "^16.2.2",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "packemon": "^1.13.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
